/**index.wxss**/
.placeholder,.placeholder_button{
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    background-color: #EBEBEB;
    height: 2.3em;
    line-height: 2.3em;
    color: #cfcfcf;
}
.placeholder_button{
  font-size: 16px;
  width: 50%;
  float:right;
  margin-right:25px;

}
.page__hd{
  position: fixed;
  width:100%;
  top:0;
  height: 15vh;
  z-index: 999;
}


 .page__bd{
  box-sizing: border-box;
  width:100%;
  height: 85vh;
  line-height: 2;
  position: fixed;
  bottom: 0;
  padding:0;
  overflow: hidden
} 
.weui-tab{
  overflow: hidden
}
.weui-navbar{
   height: 10vh;
   background-color: #f8f8f8;
}
.weui-tab__panel{
  height: 90vh;
  padding-top:10vh;
}
.weui-tab__content{   
  height: 100vh; 
  overflow:scroll; 
} 

.book-grids{box-sizing:border-box;height: 100%}  

.book-grid{
  position:relative;
  float:left;
  padding:20px 10px;
  width:33.33333333%;
  box-sizing:border-box;
}

.book-grid_active{background-color:#ececec}

.book-grid__icon{border:1rpx solid #d9d9d9;display:block;width:150rpx;height:200rpx;margin: 0 auto;
-webkit-box-shadow: 0px 10px 10px rgba(0,0,0,0.3);
}

.book-grid__label{margin-top:5px;display:block;text-align:center;color:#000;font-size:14px;white-space:nowrap;text-overflow:ellipsis;overflow:hidden}




.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}



.book-cells__tips {
margin-top:.3em;
color:#999;
padding-left:15px;
padding-right:15px;
font-size:14px;
text-align:center;

}
.book-cell{
  padding:10px 15px;
  position:relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
  text-align:center;

}


/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
/*content*/  
.drawer_box {  
  width: 550rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: #FAFAFA;  
  margin: -150px 100rpx 0 100rpx;  
  border-radius: 3px;  
}  
.drawer_title{  
  padding:15px;  
  font: 20px "microsoft yahei";  
  text-align: center;  
}  

.btn_ok{  
  padding: 10px;  
  font: 20px "microsoft yahei";  
  text-align: center;  
  border-top: 1px solid #E8E8EA;  
  color: #3CC51F;  
}  
.drawer_nav_box{
  width:390rpx;
overflow:hidden;
position:fixed;
top:50%;
left:0;
z-index:1001;
background:#ffffff;
margin:-80px 150rpx 0 150rpx;
border-radius:3px;

}
.btn_nav{  
  padding: 10px;  
  font: 14px "microsoft yahei";  
